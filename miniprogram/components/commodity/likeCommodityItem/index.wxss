.item {
  width: 670rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 200rpx;
  margin-bottom: 50rpx;
}

.item-head {
  width: 210rpx;
  height: 200rpx;
  border-radius: 20%;
}

.item-title {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 66%;
  height: 200rpx;
}

.item-title-top {
  font-size: 14px;
  height: 82rpx;
  text-indent: 1em;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-clamp: 2;
  text-overflow: ellipsis;
  word-break: break-word !important;
}

.item-title-span {
  height: 44rpx;
}

.item-title-span-hp {
  display: inline-block;
  font-size: 12px;
  color: rgb(189, 0, 0);
  border: 1px solid rgb(189, 0, 0);
  border-radius: 10px;
  padding: 2rpx 6rpx;
  margin-right: 14rpx;
}

.item-title-price {
  height: 41.6rpx;
}

.item-title-price-hp {
  display: inline-block;
  color: rgb(138, 0, 0);
  margin-right: 34rpx;
}

.item-title-bottom {
  font-size: 13px;
  color: silver;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  word-break: break-word !important;
}