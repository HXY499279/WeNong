.wraper {
  width: 97%;
  margin: 20rpx auto;
  background-color: white;
  border-radius: 10px;
  box-sizing: border-box;
  overflow: hidden;
}

.top {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid rgb(238, 238, 238);
  padding-bottom: 15rpx;
  padding: 20rpx;
}

.top-shop-wraper{
  display: flex;
  align-items: center;
  height: 40rpx;
}

.top-shop-shopName {
  height: 40rpx;
  line-height: 40rpx;
  font-weight: 560;
  margin: 0 10rpx;
}

.top-shop-arrow{
  color: silver;
}

.top-orderStatus {
  color: silver;
}

.content {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.content-top{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 180rpx;
  align-items: center;
  margin-bottom: 20rpx;
}

.content-img {
  width: 27%;
  height: 180rpx;
  border-radius: 5px;
}

.content-detail{
  display: flex;
  flex-direction: column;
  width: 70%;
  height: 100%;
  font-size: 14px;
  color: silver;
}

.content-detail text{
  margin-bottom: 10rpx;
}

.content-detail-intro{
  font-size: 16px;
  color: black;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  line-clamp: 1;
  text-overflow: ellipsis;
  word-break: break-word !important;
}

.content-bottom{
  display: flex;
  justify-content: flex-end;
  width: 100%;
}

.content-bottom-btn{
  width: 143rpx;
  font-size: 14px;
  padding: 0 10rpx;
  margin: 0 20rpx 0 0;
  background-color: white;
}

.content-bottom-btn:last-child{
  margin: 0;
}