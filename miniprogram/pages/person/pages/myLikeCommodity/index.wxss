.bg {
  width: 100%;
  height: 150rpx;
  background-color: rgb(245, 245, 245);
}

.wraper {
  position: absolute;
  top: 0;
  width: 100%;
  overflow: hidden;
}

.search {
  display: flex;
  align-items: center;
  width: 88%;
  padding: 10rpx 20rpx;
  margin: 25rpx auto 35rpx;
  border: 1px solid rgb(238, 238, 238);
  border-radius: 15px;
  background-color: white;
}

.search-icon {
  position: relative;
  bottom: -3.8rpx;
}

.search-ipt {
  width: 90%;
  margin-left: 10rpx;
}

.content {
  width: 100%;
  height: auto;
  padding: 50rpx 40rpx;
  background-color: white;
  border-radius: 20px !important;
  box-sizing: border-box;
}


.item-delete {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 65px;
  height: 100%;
  color: white;
  background-color: rgb(238,10,36);
}

.item-delete > text{
  height: 45rpx;
}