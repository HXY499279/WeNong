.wraper {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin: 0 auto;
  box-sizing: border-box;
  overflow: hidden;
}

.backgroud-circle {
  position: absolute;
  z-index: -10;
  width: 100%;
  height: 0rpx;
  padding-top: 130rpx;
  border-bottom-left-radius: 50%;
  border-bottom-right-radius: 50%;
  background-color: rgb(14, 171, 64);
}

.van-steps{
  width: 80%;
  height: 100rpx;
  margin: 30rpx auto 30rpx;
  border-radius: 10px;
  box-shadow: 0 2px 2px rgb(241, 241, 241) !important;
}

.van-step__title{
  margin-bottom: 20rpx;
}

.steps-index--van-step__icon{
  font-size: 20px !important;
}

.content{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: white;
}

.content-title{
  font-weight: 560;
  letter-spacing: 1px;
}

.item {
  display: flex;
  align-items: center;
  width: 100%;
  height: 80rpx;
  padding-bottom: 20rpx;
  margin: 20rpx 0 30rpx;
  border-bottom: 1px solid rgb(243, 243, 243);
}

.item-name {
  display: flex;
  align-items: center;
  width: 50%;
  height: 100%;
  box-sizing: border-box;
}

.item-name text {
}

.item-ipt-wraper {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: end;
  border-radius: 10px;
}

.item-ipt{
  height: 100%;
  margin-right: 20rpx;
}

.item-ipt-icon{
  color: black;
}

.item-other{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: auto;
  padding-bottom: 20rpx;
  margin: 20rpx 0 30rpx;
  border-bottom: 1px solid rgb(243, 243, 243);
}

.item-other-ipt-wraper{
  width: 100%;
  height: 160rpx !important;
  padding: 20rpx 0 0 15rpx;
  margin-top: 15rpx;
  background-color: #F5F5F5;
  border-radius: 7px;
  box-sizing: border-box;
}

.item-other-ipt{
  width: 100%;
  height: 100% !important;
}

.item-uploader{
  display: flex;
  align-items: center;
  width: 100%;
  height: 160rpx;
  padding-bottom: 20rpx;
  margin: 20rpx 0 30rpx;
  border-bottom: 1px solid rgb(243, 243, 243);
}

.separate{
  width: 100%;
  height: 20rpx;
  background-color: #F5F5F5;
}

.footer{
  width: 100%;
  margin-top: 50rpx;
  padding-bottom: 40rpx;
}

.footer-btn{
  width: 80%;
  margin: 20rpx auto;
  border-radius: 20px;
  background-color: #0EAB40;
}