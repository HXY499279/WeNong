.wraper {
  width: 100%;
  min-height: 89vh;
  padding-bottom: 160rpx;
  overflow: hidden;
  background-color: #F5F5F5;
  box-sizing: border-box;
}

.content {
  width: 100%;
}

.selectedAddress {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 95%;
  padding: 40rpx 30rpx;
  margin: 0 auto 30rpx;
  background-color: white;
  border-radius: 10px;
  box-sizing: border-box;
}

.address-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: rgb(255, 116, 57);
  color: rgb(255, 255, 255);
}

.address-info {
  width: 80%;
}

.address-info-empty{
  width: 80%;
  padding-left: 30rpx;
  color: rgb(105, 105, 105);
  text-align: left;
}

.address-info-person {
  margin-bottom: 15rpx;
}

.address-info-person-name {
  margin-right: 15rpx;
}

.address-info-more {
  color: silver;
}

.item-wraper {
  width: 95%;
  padding: 20rpx 30rpx;
  margin: 0 auto 30rpx;
  background-color: white;
  border-radius: 10px;
  box-sizing: border-box;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
}

.merchant-info {
  display: flex;
  align-items: center;
  height: 50rpx;
}

.merchant-info-head {
  width: 50rpx;
  height: 50rpx;
  border-radius: 20%;
}

.merchant-info-name {
  margin: 0 7rpx 0 22rpx;
}

.footer {
  position: fixed;
  width: 94%;
  height: 80rpx;
  display: flex;
  flex-direction: row-reverse;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 25rpx 52rpx;
  bottom: 0;
  background-color: white;
}


.right-total text {
  color: rgb(185, 0, 0);
}

.right-total-num {
  font-size: 20px;
}

.pay-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 539rpx;
  padding-top: 9rpx;
}

.pay-detail{
  width: 80%;
  text-align: center;
}

.pay-money{
  font-size: 22px;
}

.pay-money-number {
  font-size: 33px;
}

.pay-method{
  display: flex;
  justify-content: space-between;
  width: 39%;
  margin-top: 20rpx;
}