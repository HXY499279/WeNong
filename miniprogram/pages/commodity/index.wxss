.wraper {
  min-height: 90vh;
  background-color: #F5F5F5;
  padding-bottom: 200rpx;
  box-sizing: border-box;
}

.swiper {
  height: 750rpx;
  margin-top: 10rpx;
}

.swiper-img {
  width: 100%;
  height: 750rpx;

}

.box {
  display: flex;
  flex-direction: column;
  width: 95%;
  height: auto;
  border-radius: 10px;
  padding: 18rpx;
  padding-bottom: 22rpx;
  margin: 20rpx auto 0;
  background-color: white;
  box-sizing: border-box;
}

.commodity-detail-price {
  color: rgb(207, 75, 75);
}

.commodity-detail-price text {
  font-size: 34px;
}

.commodity-detail-span {
  height: 44rpx;
}

.commodity-detail-span text {
  display: inline-block;
  height: 100%;
  line-height: 40rpx;
  font-size: 12px;
  color: rgb(236, 96, 75);
  background-color: rgb(252, 240, 239);
  padding: 2rpx 6rpx;
  margin-right: 14rpx;
  box-sizing: border-box;
}

.commodity-detail-title {
  margin-top: 10rpx;
  font-weight: 560;
  letter-spacing: 1.5px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-clamp: 2;
  text-overflow: ellipsis;
  word-break: break-word !important;
}

.commodity-detail-title-good {
  display: inline-block;
  height: 100%;
  line-height: 30rpx;
  padding: 2rpx 6rpx;
  margin-right: 14rpx;
  border-radius: 3px;
  font-size: 12px;
  background-color: rgb(214, 45, 19);
  color: rgb(255, 255, 255);
}

.commodity-detail-introduce {
  margin-top: 10rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-clamp: 2;
  text-overflow: ellipsis;
  word-break: break-word !important;
}

.commodity-detail-other {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid rgb(240, 240, 240);
  padding-top: 15rpx;
  margin-top: 30rpx;
}

.commodity-detail-other-totalPrice {
  font-size: 13px;
  color: rgb(141, 139, 139);
}

.commodity-detail-other-likeAndShare {
  display: flex;
  justify-content: space-between;
  width: 230rpx;
  color: rgb(141, 139, 139);
}

.commodity-detail-other-item-like,
.commodity-detail-other-item-share {
  display: flex;
  align-items: center;
}

.commodity-detail-other-item-share-btn {
  display: inline-block !important;
  margin: 0 !important;
  padding: 0 !important;
  background-color: inherit;
  position: static;
  font-size: 16px !important;
  background-color: transparent !important;
  color: rgb(141, 139, 139) !important;
  border: 0 !important;
  line-height: 41.6rpx !important;
  border-radius: 0;
  text-decoration: transparent;
}

.commodity-detail-other-item-share-btn:after {
  content: none;
}

.commodity-detail-other-item-share-btn::after {
  border: none;
}

.stared {
  color: #0EAB40;
}

.commodity-other {
  display: flex;
  flex-direction: row !important;
  justify-content: space-between;
}

.commodity-other-item {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.commodity-other-item-name {
  font-size: 12px;
  color: rgb(141, 139, 139);
  padding-bottom: 5rpx;
  margin-bottom: 10rpx;
}

.commodity-other-item-text {
  font-size: 14px;
}

.service-detail {
  display: flex;
  flex-direction: column;
}

.service-detail-item {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}

.service-detail-left {
  display: flex;
  width: 90%;
}

.service-detail-item-name {
  width: 16%;
  color: rgb(141, 139, 139);
}

.service-detail-item-text {
  width: 84%;
  letter-spacing: 1px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  line-clamp: 1;
  text-overflow: ellipsis;
  word-break: break-word !important;
}

.service-detail-right {
  color: rgb(141, 139, 139);
}

.content {
  min-height: 685rpx;
  letter-spacing: 1.5px;
  text-indent: 5px;
  line-height: 50rpx;
  padding: 40rpx;
}

.add-commodity-number-wraper {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  min-height: 685rpx;
  padding: 40rpx;
}

.add-commodity-number {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.commodity-evaluate-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.commodity-evaluate-top-right text{
  color: rgb(158, 1, 1);
}

.commodity-evaluate-top-right-arrow{
  color:  rgb(141, 139, 139);
}

.commodity-evaluate-bottom {
  display: flex;
  flex-direction: column;
}